ct=ctpar=ctimpar=somapar=somaimpar=0
print("digite 0 para sair")
while True:
     valor = int(input("digite o valor:"))
     if valor == 0:
         break
     ct = ct + 1
     if valor % 2 == 0:
         ctpar= ctpar + 1
         somapar = somapar + valor
     if valor % 2 == 1:
         ctimpar= ctimpar + 1
         somaimpar= ctimpar + valor
mediapar = somapar/ctpar
mediaimpar = somaimpar/ ctimpar
print(f"media dos impares: {mediaimpar}")
print(f"media dos par: {somapar/ctpar}")





