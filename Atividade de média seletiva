ct=ctpar=ctimpar=somapar=somaimpar=0
print("digite 0 para sair")
while True:
     valor = int(input("digite o valor:"))
     if valor == 0:
         break
     if valor % 2 == 0:
         ctpar= ctpar + 1
         somapar = somapar + valor
     if valor % 2 == 1:
         ctimpar= ctimpar + 1
         #linha antiga: (somaimpar = ctimpar + valor)
         somaimpar= somaimpar + valor
print(f"media dos Ã­mpares: {somaimpar/ctimpar}\nmedia dos pares: {somapar/ctpar}")





